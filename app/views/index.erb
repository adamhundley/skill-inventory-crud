<h1>My Skills</h1>
<% @skills.each do |skill| %>
<h3><%= skill.id %></h3>: <a href="/skills/<%= skill.id %>"><%= skill.name %></a>
<a href="/skills/<%= skill.id %>/edit"><input class="btn btn-warning" type="button" name="name" value="Edit"></a>
<form action="/skills/<%= skill.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit"  value="Delete">
</form>
<% end %>
