<div class="col-md-6 col-md-offset-3">
  <form class="" action="/skills" method="post">
    <h1>Enter Skill</h1>
      <input class="form-control" placeholder="Skill Name" type="text" name="skill[name]"/><br>
      <textarea class="form-control" placeholder="Description of Skill" name="skill[status]" rows="8" cols="40"/></textarea><br>
    <h3>Categories</h3>
    <div class="dropdown">
      <select class="btn btn-default dropdown-toggle" id="category_id" name="skill[category_id]">
        <% @categories.each do |category| %>
      <option class="dropdown-menu" value="<%= category.id %>"><%= category.category_name %></option>
      <% end %>
      </select><br><br>
    </div><br>
      <input class="btn btn-success" type="submit" value="Submit"/>
  </form>

</div>
