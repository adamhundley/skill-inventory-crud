<div class="col-md-6 col-md-offset-3">
  <form class="" action="/skills/<%= @skill.id %>" method="post">
    <h1>Edit Skill</h1>
    <input type="hidden" name="_method" value="put"><br>
    <input class="form-control" type="text" name="skill[name]" value="<%= @skill.name %>"/><br>
    <textarea class="form-control" name="skill[status]" rows="8" cols="40"/><%= @skill.status %></textarea>
    <h3>Categories</h3>
    <div class="dropdown">
      <select class="btn btn-default dropdown-toggle" id="category_id" name="skill[category_id]">
        <% @categories.each do |category| %>
      <option class="dropdown-menu" value="<%= category.id %>"><%= category.category_name %></option>
      <% end %>
      </select><br><br>
      <input class="btn btn-success" type="submit" value="Submit"/>
    </div>
  </form>
